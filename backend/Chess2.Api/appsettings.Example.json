{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "AppSettings": {
    "Akka": {
      "ActorSystemName": "Chess2Cluster",
      "Hostname": "localhost",
      "Port": 4053,
      "SeedNodes": [ "akka.tcp://Chess2Cluster@localhost:4053" ],

      "MatchmakingShardCount": 10,
      "PlayerSessionShardCount": 10,
      "GameShardCount": 10,
      "GameChatShardCount": 10
    },
    "CorsOrigins": [ "http://127.0.0.1:3000", "http://localhost:3000" ],
    "OAuthRedirectUrl": "http://localhost:3000",
    "Game": {
      "StartingMatchRatingDifference": 300,
      "MatchRatingDifferenceGrowthPerWave": 10,
      "MatchWaveEvery": "00:00:05",

      "DefaultRating": 1200,
      "KFactor": 16,

      "DrawCooldown": 20,

      "Chat": {
        "BucketRefillRate": "00:00:03",
        "BucketCapacity": 5,
        "MaxMessageLength": 200
      }
    },
    "Jwt": {
      "SecretKey": "secret secret secret secret secret",
      "AccessMaxAge": "00:10:00",
      "RefreshMaxAge": "7.00:00:00",
      "Issuer": "chess2",
      "Audience": "account",
      "AccessTokenCookieName": "accessToken",
      "RefreshTokenCookieName": "refreshToken",
      "IsAuthedTokenCookieName": "isAuthed"
    },
    "RedisConnString": "localhost:6379",
    "DatabaseConnString": "Host=localhost;Port=5432;Username=postgres;Password=postgres;Database=chess2",
    "UsernameEditCooldown": "00:00:10"
  }
}
