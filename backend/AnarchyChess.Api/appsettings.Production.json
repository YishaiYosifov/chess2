{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "AppSettings": {
    "CorsOrigins": [ "https://anarchychess.org", "https://www.anarchychess.org" ],
    "Auth": {
      "OAuthRedirectUrl": "https://anarchychess.org",
      "LoginPageUrl": "https://anarchychess.org/signin",

      "Jwt": {
        "Issuer": "anarchychess",
        "Audience": "account"
      },

      "AccessMaxAge": "00:10:00",
      "RefreshMaxAge": "7.00:00:00",

      "CookieDomain": ".anarchychess.org",
      "AccessTokenCookieName": "accessToken",
      "RefreshTokenCookieName": "refreshToken",
      "IsLoggedInCookieName": "isLoggedIn",
      "AuthFailureCookieName": "authFailed"
    },
    "Lobby": {
      "OpenSeekShardCount": 5,

      "MaxActiveGames": 5,
      "AllowedMatchRatingDifference": 300,
      "MatchWaveEvery": "00:00:01",
      "SeekLifetime": "00:05:00"
    },
    "Game": {
      "DefaultRating": 1200,
      "KFactor": 16,

      "DrawCooldown": 20,

      "Chat": {
        "BucketRefillRate": "00:00:03",
        "BucketCapacity": 5,
        "MaxMessageLength": 200
      },

      "RematchLifetime": "00:05:00"
    },
    "Challenge": {
      "ChallengeLifetime": "00:10:00"
    },

    "UsernameEditCooldown": "14.00:00:00"
  }
}
